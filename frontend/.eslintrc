 {
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-unused-vars": 2,
    "no-undef": 2,
    "class-methods-use-this": 0,
    "import/no-extraneous-dependencies": 0,
    "linebreak-style": 0,
    "react/jsx-filename-extension": 0,
    "react/forbid-prop-types": 0,
    "no-class-assign": 0,
    "no-script-url": 0,
    "max-len": "off"
  },
  "parserOptions": {
    "sourceType": "module"
  }
}

 
